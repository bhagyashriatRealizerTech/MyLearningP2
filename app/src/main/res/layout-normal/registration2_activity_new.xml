<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:weightSum="11.2">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:textStyle="normal"
            android:background="#21458f"
            android:id="@+id/txtRegistration"
            style="@style/HeadingNavFontStyle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="47dp"
            android:textSize="22dp"
            android:text="Registration"/>
        <TextView
            android:layout_gravity="center|right"
            android:textColor="#FFF"
            android:textStyle="italic"
            style="@style/HeadingNavFontStyle"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="27dp"
            android:textSize="16dp"
            android:text="(Step : 2)"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:gravity="center"
                android:background="@drawable/school_genie_logo"
                android:layout_height="60dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <realizer.com.schoolgenieparent.view.TextViewCustom
                android:layout_width="wrap_content"
                android:id="@+id/txt_reg_schoolname"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/greycolor"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/border_line"
                android:visibility="visible"/>
            <realizer.com.schoolgenieparent.view.TextViewCustom
                android:layout_width="wrap_content"
                android:id="@+id/txt_reg_address"
                style="@style/TextViewFontStyle"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/greycolor"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/border_line"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <realizer.com.schoolgenieparent.view.TextViewCustom
                    android:layout_width="wrap_content"
                    style="@style/TextViewFontStyle"
                    android:id="@+id/txt_reg_standard"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/greycolor"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/TextViewFontStyle"
                    android:id="@+id/txt_reg_dash"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="18sp" />
                <realizer.com.schoolgenieparent.view.TextViewCustom
                    android:layout_width="wrap_content"
                    style="@style/TextViewFontStyle"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/txt_reg_division"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/greycolor"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_line"
        android:visibility="visible"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:id="@+id/edt_reg_stdfname"
                    android:layout_gravity="left"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="First Name"
                    android:textSize="16sp"
                    android:textColor="@color/darkgreycolor"
                    android:inputType="text"
                    android:background="@drawable/square_registarion"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/edt_reg_stdlname"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@color/darkgreycolor"
                    android:background="@drawable/square_registarion" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:hint="EmailId"
                    android:id="@+id/edt_reg_emailid"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:textColor="@color/darkgreycolor"
                    android:background="@drawable/square_registarion"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <realizer.com.schoolgenieparent.view.TextViewCustom
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:text="Date Of Birth"
                    android:textColor="@color/greycolor"
                    android:gravity="center|left"
                    android:textSize="16sp"
                    android:id="@+id/txt_reg_dob"
                    android:onClick="regdobclick"
                    android:inputType="text"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/square_registarion"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:hint="Phone No"
                    android:id="@+id/edt_reg_phoneno"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="@color/darkgreycolor"
                    android:background="@drawable/square_registarion"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:hint="User id"
                    android:id="@+id/edt_reg_userid"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@color/darkgreycolor"
                    android:background="@drawable/square_registarion"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:hint="Password"
                    android:id="@+id/edt_reg_pass"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="@color/darkgreycolor"
                    android:background="@drawable/square_registarion"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:id="@+id/edt_reg_confirmpass"
                    android:textSize="16sp"
                    android:textColor="@color/darkgreycolor"
                    android:background="@drawable/square_registarion"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button style="@style/LoginButton"
                    android:layout_width="120dp"
                    android:background="@drawable/login_button_orange"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:id="@+id/btnRegister"
                    android:text="Register"
                    android:onClick="RegisterClick" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    </ScrollView>
</LinearLayout>

    <realizer.com.schoolgenieparent.view.ProgressWheel
    android:id="@+id/loading"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:visibility="gone"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    app:matProg_barColor="@color/colorAccent"
    app:matProg_progressIndeterminate="true"
    />
    </RelativeLayout>