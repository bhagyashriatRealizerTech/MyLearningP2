    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:layout_above="@+id/btnContinue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        >
    <Spinner
        android:layout_height="60dp"
        android:foregroundGravity="right"
        style="@style/FinalSpinner"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-condensed"
        android:popupBackground="@drawable/list_selector"
        android:id="@+id/spSchoolName"
        android:spinnerMode="dropdown"
        android:overlapAnchor="false"
        android:prompt="@string/MyPupil"
        android:layout_above="@+id/edtAddress"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:enabled="false"
        android:focusable="false"
        android:layout_marginTop="10dp"
        android:id="@+id/edtAddress"
        android:text="School Address"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/greycolor"
        android:background="@drawable/square_registarion"
        android:inputType="text"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:foregroundGravity="right"
        style="@style/FinalSpinner"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-condensed"
        android:popupBackground="@drawable/list_selector"
        android:id="@+id/spStandard"
        android:spinnerMode="dropdown"
        android:overlapAnchor="false"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_above="@+id/spDivision"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:foregroundGravity="right"
        style="@style/FinalSpinner"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-condensed"
        android:popupBackground="@drawable/list_selector"
        android:id="@+id/spDivision"
        android:spinnerMode="dropdown"
        android:overlapAnchor="false"
        android:visibility="visible"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_above="@+id/btnContinue"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="false"
            android:lines="2"
            android:layout_marginTop="10dp"
            android:id="@+id/edtDiv"
            android:hint="Enter Division"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textColor="@color/darkgreycolor"
            android:background="@drawable/square_registarion"
            android:inputType="text"
            android:visibility="gone"
            android:layout_above="@+id/spStandard"
            />

</LinearLayout>
    </ScrollView>
    <Button style="@style/LoginButton"
        android:layout_width="150dp"
        android:layout_weight="0"
        android:background="@drawable/login_button_orange"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="22sp"
        android:id="@+id/btnContinue"
        android:text="Continue"
        android:onClick="ContinueClick"
        android:layout_marginTop="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>