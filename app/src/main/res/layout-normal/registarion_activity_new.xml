<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_above="@+id/linearlayout">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="#FFF"
                android:textStyle="normal"
                android:background="#21458f"
                android:id="@+id/txtRegistration"
                style="@style/HeadingNavFontStyle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="22dp"
                android:text="Registration"/>
            <TextView
                android:layout_gravity="center|right"
                android:textColor="#FFF"
                android:textStyle="italic"
                style="@style/HeadingNavFontStyle"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:text="(Step : 1)"/>
        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:id="@+id/txtSchoolNm"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:background="@drawable/genie_logo_action_bar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/tag_line"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <realizer.com.schoolgenieparent.view.TextViewCustom
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtinfo"
            android:text="School Information"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center"/>

