<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/greycolor" />
            <stroke
                android:width="1dp"
                android:color="#fec10e" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fec10e"
                android:endColor="@color/greycolor"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#fec10e" />
            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>